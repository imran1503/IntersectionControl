<?xml version="1.0"?>
<launch>
	<param name="/use_sim_time" value="true"/>

	<!-- Arguments -->
	<arg name="base_frame" default="ego_vehicle/lidar/lidar1"/>
	<arg name="odom_frame" default="carla/ego_vehicle/odometery"/>
	<arg name="map_frame" default="map"/>
  	<arg name="scan_topic" default="/laser_scan" />
	

	<!-- Lidar Pointcloud to laserscan conversion -->
    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan">
     <remap from="cloud_in" to="/carla/ego_vehicle/lidar/lidar1/point_cloud"/>
     <remap from="scan" to="$(arg scan_topic)" />
     <rosparam>
        target_frame: ego_vehicle/lidar/lidar1
        min_height: -2.0
        max_height: 80.0
        
        angle_min: -3.14159
        angle_max: 3.14159
        angle_increment: 0.1
        scan_time: 0.05
        range_min: 0.0
        range_max: 80.0
        use_inf: true
        
        #concurrency_level affects number of pc queued for processing and the number of threadsused
        # 0: Detect number of cores
        # 1: Single threaded
        # 2: inf : Parallelism level
        concurrency_level: 2
      </rosparam>
    </node>

  <!-- Gmapping -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping">
	<param name="odom_frame" value="$(arg odom_frame)"/>
	<param name="base_frame" value="$(arg base_frame)"/>
	<param name="map_frame" value="$(arg map_frame)"/>
	<param name="scan" value="$(arg scan_topic)"/>
	<param name="map_update_interval" value="0.1"/>
	<param name="minimumScore" value="10"/>	
	<param name="particles" value="20"/>
	<param name="delta" value="0.5"/>
        <remap from="scan" to="$(arg scan_topic)"/>
  </node>


  <!-- Start the rviz node -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find carla_ROS_SLAM)/src/carla_lidar1.rviz">
	<remap from="map" to="/map"/>
  </node>
</launch>

